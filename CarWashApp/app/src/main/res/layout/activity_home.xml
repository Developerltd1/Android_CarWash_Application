<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

   <!-- <include
        layout="@layout/app_bar_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Hide_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:paddingTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="ServiceType"
                    android:textColor="@color/blu"
                    android:textSize="14sp"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingTop="1dp"
                    android:text="Date"
                    android:textSize="14sp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingTop="1dp"
                    android:text="Time"
                    android:textSize="14sp" />
            </LinearLayout>
            <Spinner
                android:background="@drawable/spiner_bg"
                android:id="@+id/spService"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="9dp"
                android:layout_weight="1"
                android:hint="Vehicle Reg No"
                android:padding="10dp"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Vehicle Type"
                android:textColor="@color/blu"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="43dp"
                android:text="Make"
                android:textColor="@color/blu"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
               android:paddingLeft="88dp"
                android:text="Party"
                android:textColor="@color/blu"
                android:textSize="14sp"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:background="@drawable/spiner_bg"
                    android:id="@+id/spVehicleType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:hint="Vehicle Reg No"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spVehicleMake"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/spiner_bg"
                    android:hint="Vehicle Model"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"

                    />

                <Spinner
                    android:background="@drawable/spiner_bg"
                    android:id="@+id/spParty"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:hint="Service Type"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edtVModel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/backg"
                    android:hint="Model"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"

                    />


                <EditText
                    android:id="@+id/edtVRegNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/backg"
                    android:hint="Reg No"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/backg"
                    android:hint="Charges"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/edtCommision"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/backg"
                    android:hint="Commision"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Customer Details"
                android:textColor="@color/blu"
                android:textSize="14sp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="1dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/backg"
                    android:hint="Name"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/edtContact"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/backg"
                    android:hint="Contact No"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>


            <EditText
                android:id="@+id/edtComments"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/backg"
                android:hint="Comments"
                android:padding="10dp"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:background="@color/blu"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

